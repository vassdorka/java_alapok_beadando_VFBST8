<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>BookController</servlet-name>
        <servlet-class>Controller.BookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthorController</servlet-name>
        <servlet-class>Controller.AuthorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RentalController</servlet-name>
        <servlet-class>Controller.RentalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookauthorController</servlet-name>
        <servlet-class>Controller.BookauthorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Member1Controller</servlet-name>
        <servlet-class>Controller.Member1Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookController</servlet-name>
        <url-pattern>/BookController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorController</servlet-name>
        <url-pattern>/AuthorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RentalController</servlet-name>
        <url-pattern>/RentalController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookauthorController</servlet-name>
        <url-pattern>/BookauthorController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Member1Controller</servlet-name>
        <url-pattern>/Member1Controller</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
